#!/bin/bash

NONE="\033[0m"
ORANGE="\033[0;33m"
RED="\033[0;31m"
GREEN="\033[0;32m"


@p() {
  echo -e "${LVLBAR}\033[0;32m- ${@}\033[0m"
}

@e() {
  echo -e "${LVLBAR}\033[0;31m! ${@}\033[0m" >&2
  exit 1
}

@d() {
  echo -e "\033[1;34m? ${@}\033[0m"
}

@einz() {
  if [ $? -ne 0 ]; then
    @e $@
  fi
}

DEBUG="${DEBUG:-}"
shopt -s extdebug
test ! -z $DEBUG && trap '@d ${BASH_COMMAND}' DEBUG
